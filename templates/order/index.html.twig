{% extends 'base.html.twig' %}

{% block title %}Order index{% endblock %}

{% block body %}
    <h1>Order index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>IdClient</th>
                <th>Status</th>
                <th>Date</th>
                <th>ListeProduit</th>
                <th>ClientName</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for order in orders %}
            <tr>
                <td>{{ order.id }}</td>
                <td>{{ order.idCommande }}</td>
                <td>{{ order.status }}</td>
                {#<td>{{ order.date ? order.date|date('Y-m-d') : '' }}</td>#}
                <td>{{ order.date }}</td>
                {#<td>{{ order.listeProduit ? order.listeProduit|json_encode : '' }}</td>#}
                <td>{{ order.listeProduit }}</td>
                <td>{{ order.clientName }}</td>
                <td>
                    <a href="{{ path('order_show', {'id': order.id}) }}">show</a>
                    <a href="{{ path('order_edit', {'id': order.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('order_new') }}">Create new</a>
{% endblock %}
